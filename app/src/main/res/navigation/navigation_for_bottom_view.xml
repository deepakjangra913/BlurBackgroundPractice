<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_for_bottom_view"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.blurbackgroundpractice.navigation_bottom_view.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.blurbackgroundpractice.navigation_bottom_view.ui.ProfileFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.blurbackgroundpractice.navigation_bottom_view.ui.NotificationsFragment"
        android:label="NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />

    <action
        android:id="@+id/action_open_home_fragment"
        app:destination="@+id/homeFragment" />

    <action
        android:id="@+id/action_open_profile_fragment"
        app:destination="@+id/profileFragment" />

    <action
        android:id="@+id/action_open_notifications_fragment"
        app:destination="@+id/notificationsFragment" />

</navigation>